<% layout("boilerplate/boilerplate.ejs") %>

<!----------------------------------------------------->
<form
  action="/blogs"
  method="post"
  enctype="multipart/form-data"
  class="new_edit_form"
>
  <!--------------- title inputs --------------->
  <div class="field">
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      minlength="10"
      maxlength="50"
      required
    />
  </div>

  <!--------------- description inputs --------------->
  <div class="field">
    <label for="description">Description</label>
    <input
      type="text"
      id="description"
      name="description"
      minlength="50"
      maxlength="2000"
      required
    />
  </div>

  <!--------------- image inputs --------------->
  <div class="field">
    <label for="coverImg">Cover Image</label>
    <input type="file" id="coverImg" name="coverImg" required />
  </div>

  <!--------------- submit button --------------->
  <button class="button">Create blog</button>
</form>
